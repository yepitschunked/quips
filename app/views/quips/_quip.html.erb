<span class = "quip_display">
	<%= link_to "\##{quip.id}", quip %>
	<span id=<%=h "plus#{quip.id}"%>>
		<%= link_to "+", 
          {:controller => :quips, :id => quip.id, :type => 'up'},
            :remote => true %>
	</span>
	(<span id="vote_<%=quip.id%>"><%=h quip.votes %></span>)
	<span id=<%=h "minus#{quip.id}"%>><%= link_to "-", 
      {:controller => :quips, :id => quip.id, :type => 'down'},
      :remote => true %>
	</span>
</span>
<div class="quip_display">
	<%= quip.quip %>
</div>

source 'http://rubygems.org'

gem 'rails', '~> 3.2'
gem 'jquery-rails'
gem 'jquery-ui-rails'
gem 'tire'

# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

gem 'thin'

gem 'pg'
gem 'haml'

group :assets do
  gem 'sass-rails'
  gem 'bootstrap-sass'
end

gem 'kaminari'
gem 'recaptcha', :require => 'recaptcha/rails'

group :development, :test do
  gem 'byebug'
  gem 'pry-rails'
  gem 'rspec-rails'
end

group :test do
  gem 'capybara-webkit'
  gem 'database_cleaner'
  gem 'factory_girl_rails'
  gem 'launchy'
end

# Deploy with Capistrano
gem 'capistrano'

